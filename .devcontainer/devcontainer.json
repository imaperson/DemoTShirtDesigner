{
	"name": "Maven",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"mounts": [
		"source=${localEnv:HOME}${localEnv:USERPROFILE}/.m2,target=/root/.m2,type=bind"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker",
				"davidanson.vscode-markdownlint",
				"eamodio.gitlens",
				"mhutchie.git-graph"
			]
		}
	},
	"remoteUser": "root"
}